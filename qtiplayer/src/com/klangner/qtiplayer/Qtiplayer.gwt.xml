<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 1.7.0//EN" "http://google-web-toolkit.googlecode.com/svn/tags/1.7.0/distro-source/core/src/gwt-module.dtd">
<module rename-to='qtiplayer'>

  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User'/>
  <inherits name='com.google.gwt.user.theme.standard.Standard'/>
  <inherits name='com.google.gwt.user.ImageBundle'/>
  <inherits name="com.google.gwt.http.HTTP" />
  <inherits name="com.google.gwt.xml.XML" />

  <!-- Specify the app entry point class.                         -->
  <entry-point class='com.klangner.qtiplayer.client.PlayerEntryPoint'/>
  
	<!-- Flash player as default value -->
	<script src="video/AC_RunActiveContent.js" />
	<script src="video/FAVideo.js" />
  <replace-with class="com.klangner.qtiplayer.client.module.object.impl.FlashVideoImpl">
    <when-type-is class="com.klangner.qtiplayer.client.module.object.impl.VideoImpl"/>
  </replace-with>

  <!-- Use video tag for iphone browser -->
  <replace-with class="com.klangner.qtiplayer.client.module.object.impl.HTML5VideoImpl">
    <when-type-is class="com.klangner.qtiplayer.client.module.object.impl.VideoImpl" />
    <any>
      <when-property-is name="user.agent" value="safari"/>
    </any>
  </replace-with>
  
</module>
